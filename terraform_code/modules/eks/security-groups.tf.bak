resource "aws_security_group_rule" "eks_allow_worker_to_control_plane" {
  type                     = "ingress"
  from_port                = 443
  to_port                  = 443
  protocol                 = "tcp"
  security_group_id        = aws_eks_cluster.this.vpc_config[0].security_group_ids[0]
  source_security_group_id = aws_security_group.eks_worker_nodes.id
  description              = "Allow worker nodes to talk to EKS API server"
}

resource "aws_security_group_rule" "eks_allow_all_within_cluster" {
  type                     = "ingress"
  from_port                = 0
  to_port                  = 0
  protocol                 = "-1"
  security_group_id        = aws_security_group.eks_worker_nodes.id
  source_security_group_id = aws_security_group.eks_worker_nodes.id
  description              = "Allow all traffic between worker nodes"
}

